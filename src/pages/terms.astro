<style>
  .header-blur {
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    background: rgba(13, 17, 23, 0.8);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .header-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 16px 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header-logo-link {
    display: flex;
    align-items: center;
  }

  .header-logo {
    height: 32px;
    width: auto;
  }

  .back-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 14px;
    letter-spacing: 1px;
    text-transform: uppercase;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .legal-content {
    min-height: 100vh;
    padding: 140px 24px 80px;
    background: var(--color-background);
  }

  .legal-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .legal-title {
    font-family: 'Clash Display', sans-serif;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 24px;
    letter-spacing: 2px;
  }

  .legal-meta {
    color: var(--color-text-secondary);
    font-size: 14px;
    margin-bottom: 40px;
    padding-bottom: 24px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .legal-meta p {
    margin: 4px 0;
  }

  .legal-intro {
    font-size: 1.1rem;
    color: var(--color-text-secondary);
    line-height: 1.8;
    margin-bottom: 24px;
  }

  .legal-section {
    margin-bottom: 40px;
  }

  .legal-section h2 {
    font-family: 'Clash Display', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 16px;
    letter-spacing: 1px;
  }

  .legal-section p {
    color: var(--color-text-secondary);
    line-height: 1.8;
    margin-bottom: 16px;
  }

  .legal-section ul {
    color: var(--color-text-secondary);
    line-height: 1.8;
    margin: 16px 0;
    padding-left: 24px;
    list-style-type: disc;
  }

  .legal-section li {
    margin-bottom: 8px;
  }

  .legal-section a {
    color: var(--color-primary);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .legal-section a:hover {
    opacity: 0.8;
  }

  .legal-section strong {
    color: var(--color-text);
  }

  .legal-caps {
    font-size: 0.95rem;
  }
</style>

