---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Lobbi - Find Your Squad">
  <main class="min-h-screen">
    
    <!-- Premium Fixed Header -->
    <header class="fixed top-0 left-0 right-0 z-50 header-blur">
      <div class="header-container">
        <a href="/" class="header-logo-link">
          <img src="/lobbi-logo-transparent.png" alt="Lobbi" class="header-logo" />
        </a>
        <nav class="header-nav">
          <a href="#features" class="nav-link">Features</a>
          <a href="#app" class="nav-link">App</a>
          <a href="#download" class="nav-link">Download</a>
        </nav>
        <a href="#download" class="cta-button-small">
          <span>GET STARTED</span>
          <div class="cta-glow"></div>
        </a>
      </div>
    </header>

    <!-- ===== HERO SECTION ===== -->
    <section class="relative min-h-screen overflow-hidden noise-overlay">
      
      <!-- Animated Background Orbs -->
      <div class="orb-container">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
        <div class="orb orb-3"></div>
      </div>
      
      <!-- Grid Pattern -->
      <div class="grid-pattern"></div>
      
      <!-- Scanline overlay -->
