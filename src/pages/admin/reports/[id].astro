---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getAdminSession } from '../../../lib/adminAuth';
import { getReportById, getReportStats } from '../../../lib/supabase';

// Check admin auth - redirect if not authenticated
const session = await getAdminSession(Astro);
if (!session) {
  return Astro.redirect('/admin/login');
}

const { id } = Astro.params;

// Fetch report from database
const report = await getReportById(id as string);

// Redirect if not found
if (!report) {
  return Astro.redirect('/admin/reports');
}

// Get report stats for sidebar badge
const reportStats = await getReportStats();

// Helper functions
function formatDate(dateStr: string | null) {
  if (!dateStr) return 'N/A';
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { 
    weekday: 'short',
    month: 'short', 
    day: 'numeric', 
    year: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
}

function formatJoinDate(dateStr: string | null) {
  if (!dateStr) return 'N/A';
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
}

function getReportTypeClass(reason: string | null): string {
  if (!reason) return 'other';
  const r = reason.toLowerCase();
  if (r.includes('harass')) return 'harassment';
  if (r.includes('spam')) return 'spam';
  if (r.includes('fake')) return 'fake';
  if (r.includes('underage')) return 'underage';
  if (r.includes('inappropriate')) return 'inappropriate';
  return 'other';
}
---

<AdminLayout title={`Report #${report.id.slice(0, 8)}`} currentPage="reports" session={session} pendingReportsCount={reportStats.pending}>
  <div class="report-detail">
    <!-- Back Link -->
    <a href="/admin/reports" class="back-link">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="15 18 9 12 15 6"/>
      </svg>
      Back to Reports
    </a>
    
    <!-- Report Header -->
    <div class="report-header">
      <div class="header-left">
        <div class={`report-type ${getReportTypeClass(report.reason)}`}>{report.reason || 'Other'}</div>
        <h1 class="report-title">#{report.id.slice(0, 8)}</h1>
        <span class="report-date">{formatDate(report.created_at)}</span>
      </div>
      <div class={`status-badge ${report.status || 'pending'}`}>
        {(report.status || 'pending').charAt(0).toUpperCase() + (report.status || 'pending').slice(1)}
      </div>
    </div>
    
    <!-- Report Reason -->
    <div class="detail-card">
      <h3 class="card-title">Report Reason</h3>
      <p class="reason-text">"{report.details || 'No details provided'}"</p>
    </div>
    
    <!-- Users Section -->
    <div class="users-section">
      <!-- Reported User -->
      <div class="user-card reported">
        <div class="card-label">Reported User</div>
        <div class="user-main">
          <div class="user-avatar">{(report.reportedUser?.name || 'U').charAt(0)}</div>
          <div class="user-info">
            <span class="user-name">{report.reportedUser?.name || 'Unknown'}</span>
            <span class="user-gamertag">{report.reportedUser?.gamertag || '-'}</span>
          </div>
          <div class="user-meta">
            <span class="meta-item">{report.reportedUser?.email || 'No email'}</span>
            <span class="meta-divider">•</span>
            <span class="meta-item">Joined {formatJoinDate(report.reportedUser?.created_at)}</span>
            <span class="meta-divider">•</span>
            <span class="meta-item warning">{report.reportedUserReportCount || 0} reports</span>
            <span class="meta-divider">•</span>
            <span class="meta-item status active">Active</span>
          </div>
          <a href={`/admin/users/${report.reported_user_id}`} class="view-profile-btn">View Profile</a>
        </div>
      </div>
      
      <!-- Reporter -->
      <div class="user-card reporter">
        <div class="card-label">Reported By</div>
        <div class="user-main">
          <div class="user-avatar">{(report.reporter?.name || 'U').charAt(0)}</div>
          <div class="user-info">
            <span class="user-name">{report.reporter?.name || 'Unknown'}</span>
            <span class="user-gamertag">{report.reporter?.gamertag || '-'}</span>
          </div>
          <div class="user-meta">
            <span class="meta-item">{report.reporter?.email || 'No email'}</span>
            <span class="meta-divider">•</span>
            <span class="meta-item">Joined {formatJoinDate(report.reporter?.created_at)}</span>
          </div>
          <a href={`/admin/users/${report.reporter_id}`} class="view-profile-btn secondary">View Profile</a>
        </div>
      </div>
    </div>
    
    <!-- Additional Details -->
    <div class="report-details">
      
      {report.context_type && report.context_id && (
        <div class="detail-card">
          <h3 class="card-title">Context</h3>
          <div class="context-info">
            <span class="context-type">{report.context_type}</span>
            <span class="context-id">ID: {report.context_id}</span>
          </div>
        </div>
      )}
      
      {report.action_taken && (
        <div class="detail-card">
          <h3 class="card-title">Previous Action</h3>
          <div class="actions-history">
            <div class="history-item">
              <span class="history-action">{report.action_taken}</span>
              <span class="history-meta">
                {formatDate(report.reviewed_at)} 
                {report.reviewed_by && `by Admin`}
              </span>
              {report.admin_notes && (
                <p class="history-notes">{report.admin_notes}</p>
              )}
            </div>
          </div>
        </div>
      )}
    </div>
    
    <!-- Actions Bar -->
    <div class="actions-bar" data-report-id={report.id}>
      <button class="action-btn dismiss" data-action="dismiss">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
        Dismiss Report
      </button>
      <button class="action-btn warn" data-action="warn">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
          <line x1="12" y1="9" x2="12" y2="13"/>
          <line x1="12" y1="17" x2="12.01" y2="17"/>
        </svg>
        Warn User
      </button>
      <button class="action-btn suspend" data-action="suspend">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"/>
        </svg>
        Suspend 7 Days
      </button>
      <button class="action-btn ban" data-action="ban">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <line x1="15" y1="9" x2="9" y2="15"/>
          <line x1="9" y1="9" x2="15" y2="15"/>
        </svg>
        Permanent Ban
      </button>
    </div>
  </div>
</AdminLayout>

<style>
  .report-detail {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  /* Back Link */
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--admin-text-secondary, #8b949e);
    text-decoration: none;
    font-size: 14px;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--admin-text, #e6edf3);
  }

  .back-link svg {
    width: 18px;
    height: 18px;
  }

  /* Report Header */
  .report-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 24px;
    background: rgba(22, 27, 34, 0.6);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 12px;
  }

  .header-left {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .report-type {
    display: inline-block;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    width: fit-content;
  }

  .report-type.harassment {
    background: rgba(248, 81, 73, 0.15);
    color: #f85149;
  }

  .report-type.underage {
    background: rgba(163, 113, 247, 0.15);
    color: #a371f7;
  }

  .report-type.spam {
    background: rgba(210, 153, 34, 0.15);
    color: #d29922;
  }

  .report-type.fake {
    background: rgba(56, 139, 253, 0.15);
    color: #388bfd;
  }

  .report-title {
    font-family: 'Clash Display', sans-serif;
    font-size: 28px;
    font-weight: 600;
    color: var(--admin-text, #e6edf3);
    margin: 0;
  }

  .report-date {
    font-size: 13px;
    color: var(--admin-text-secondary, #8b949e);
  }

  .status-badge {
    padding: 8px 16px;
    border-radius: 8px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .status-badge.pending {
    background: rgba(248, 81, 73, 0.15);
    color: #f85149;
  }

  .status-badge.resolved {
    background: rgba(63, 185, 80, 0.15);
    color: #3fb950;
  }

  /* Users Section */
  .users-section {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .user-card {
    background: rgba(22, 27, 34, 0.6);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 12px;
    padding: 16px 20px;
  }

  .user-card.reported {
    border-color: rgba(248, 81, 73, 0.2);
  }

  .card-label {
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--admin-text-secondary, #8b949e);
    margin-bottom: 12px;
  }

  .user-main {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-wrap: wrap;
  }

  .user-avatar {
    width: 44px;
    height: 44px;
    background: linear-gradient(135deg, var(--admin-primary, #ff4655) 0%, #ff6b7a 100%);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 16px;
    color: white;
    flex-shrink: 0;
  }

  .user-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 120px;
  }

  .user-name {
    font-size: 15px;
    font-weight: 600;
    color: var(--admin-text, #e6edf3);
  }

  .user-gamertag {
    font-size: 13px;
    color: var(--admin-primary, #ff4655);
  }

  .user-meta {
    display: flex;
    align-items: center;
    gap: 8px;
    flex: 1;
    flex-wrap: wrap;
  }

  .meta-item {
    font-size: 13px;
    color: var(--admin-text-secondary, #8b949e);
  }

  .meta-item.warning {
    color: #f85149;
    font-weight: 600;
  }

  .meta-item.status {
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .meta-item.status.active {
    background: rgba(63, 185, 80, 0.15);
    color: #3fb950;
  }

  .meta-divider {
    color: var(--admin-text-secondary, #8b949e);
    opacity: 0.4;
  }

  .view-profile-btn {
    padding: 10px 20px;
    background: var(--admin-primary, #ff4655);
    border: none;
    border-radius: 8px;
    color: white;
    font-size: 13px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    margin-left: auto;
    white-space: nowrap;
  }

  .view-profile-btn:hover {
    opacity: 0.9;
  }

  .view-profile-btn.secondary {
    background: rgba(255, 255, 255, 0.06);
    color: var(--admin-text, #e6edf3);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .view-profile-btn.secondary:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  /* Report Details */
  .report-details {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .detail-card {
    background: rgba(22, 27, 34, 0.6);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 12px;
    padding: 20px;
  }

  .card-title {
    font-size: 14px;
    font-weight: 600;
    color: var(--admin-text, #e6edf3);
    margin: 0 0 16px 0;
  }

  .reason-text {
    font-size: 15px;
    line-height: 1.7;
    color: var(--admin-text, #e6edf3);
    font-style: italic;
    margin: 0;
  }

  .evidence-list {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .evidence-item {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    background: rgba(56, 139, 253, 0.1);
    border: 1px solid rgba(56, 139, 253, 0.3);
    border-radius: 8px;
    color: #388bfd;
    font-size: 13px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .evidence-item:hover {
    background: rgba(56, 139, 253, 0.2);
  }

  .evidence-item svg {
    width: 16px;
    height: 16px;
  }

  .actions-history {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .history-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 8px;
  }

  .history-action {
    font-size: 14px;
    color: var(--admin-text, #e6edf3);
  }

  .history-meta {
    font-size: 12px;
    color: var(--admin-text-secondary, #8b949e);
  }

  /* Actions Bar */
  .actions-bar {
    display: flex;
    gap: 12px;
    padding: 24px;
    background: rgba(22, 27, 34, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 12px;
    position: sticky;
    bottom: 24px;
  }

  .action-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 14px 20px;
    border-radius: 10px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }

  .action-btn svg {
    width: 18px;
    height: 18px;
  }

  .action-btn.dismiss {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(255, 255, 255, 0.1);
    color: var(--admin-text-secondary, #8b949e);
  }

  .action-btn.dismiss:hover {
    background: rgba(255, 255, 255, 0.1);
    color: var(--admin-text, #e6edf3);
  }

  .action-btn.warn {
    background: rgba(210, 153, 34, 0.15);
    color: #d29922;
  }

  .action-btn.warn:hover {
    background: rgba(210, 153, 34, 0.25);
  }

  .action-btn.suspend {
    background: rgba(163, 113, 247, 0.15);
    color: #a371f7;
  }

  .action-btn.suspend:hover {
    background: rgba(163, 113, 247, 0.25);
  }

  .action-btn.ban {
    background: rgba(248, 81, 73, 0.15);
    color: #f85149;
  }

  .action-btn.ban:hover {
    background: rgba(248, 81, 73, 0.25);
  }

  @media (max-width: 900px) {
    .user-main {
      flex-direction: column;
      align-items: flex-start;
    }

    .user-meta {
      margin-top: 8px;
    }

    .view-profile-btn {
      margin-left: 0;
      margin-top: 12px;
      width: 100%;
      text-align: center;
    }

    .actions-bar {
      flex-wrap: wrap;
      position: static;
    }

    .action-btn {
      flex: 1 1 45%;
    }
  }

  @media (max-width: 600px) {
    .action-btn {
      flex: 1 1 100%;
    }
  }
</style>

