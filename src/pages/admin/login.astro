        </div>
      </div>
      
      <a href="/" class="back-link">‚Üê Back to lobbiapp.com</a>
    </div>
  </main>
</Layout>

<style>
  .login-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #0d1117;
    padding: 24px;
  }

  .login-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
  }

  .login-card {
    background: #161b22;
    border: 1px solid #30363d;
    border-radius: 16px;
    padding: 48px;
    width: 100%;
    max-width: 420px;
  }

  .error-banner {
    background: rgba(248, 81, 73, 0.15);
    border: 1px solid rgba(248, 81, 73, 0.3);
    border-radius: 8px;
    padding: 12px 16px;
    margin-bottom: 24px;
    color: #f85149;
    font-size: 14px;
    text-align: center;
  }

  .login-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .login-logo {
    width: 64px;
    height: 64px;
    margin: 0 auto 24px;
    display: block;
  }

  .login-title {
    font-family: 'Clash Display', sans-serif;
    font-size: 24px;
    font-weight: 700;
    color: #e6edf3;
    letter-spacing: 3px;
    margin-bottom: 8px;
  }

  .login-subtitle {
    color: #8b949e;
    font-size: 14px;
  }

  .login-buttons {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .auth-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    width: 100%;
    padding: 14px 24px;
    border-radius: 10px;
    border: 1px solid #30363d;
    background: #21262d;
    color: #e6edf3;
    font-size: 15px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .auth-btn:hover {
    background: #30363d;
    border-color: #8b949e;
  }

  .auth-icon {
    width: 20px;
    height: 20px;
  }

  .google-btn:hover {
    border-color: #4285F4;
  }

  .apple-btn:hover {
    border-color: #fff;
  }

  .discord-btn:hover {
    border-color: #5865F2;
  }

  .discord-btn .auth-icon {
    color: #5865F2;
  }

  .login-footer {
    margin-top: 32px;
    padding-top: 24px;
    border-top: 1px solid #30363d;
  }

  .login-notice {
    font-size: 12px;
    color: #8b949e;
    text-align: center;
    line-height: 1.6;
  }

  .login-notice a {
    color: #ff4655;
    text-decoration: none;
  }

  .login-notice a:hover {
    text-decoration: underline;
  }

  .back-link {
    color: #8b949e;
    font-size: 14px;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: #ff4655;
  }
</style>

<script>
  import { createSupabaseBrowserClient } from '../../lib/supabase-ssr';

  const supabase = createSupabaseBrowserClient();
  
  // Use full URL for production, dynamic for dev
  const redirectTo = window.location.hostname === 'lobbiapp.com'
    ? 'https://lobbiapp.com/admin/auth/callback'
    : `${window.location.origin}/admin/auth/callback`;

  console.log('Configured redirectTo:', redirectTo);

  // Helper function to fix OAuth URL redirect
  function fixOAuthRedirect(oauthUrl, correctRedirect) {
    try {
      const urlObj = new URL(oauthUrl);
      const redirectParam = urlObj.searchParams.get('redirect_to');
      
      // Check if redirect is using mobile deep link instead of web URL
      if (redirectParam && redirectParam.startsWith('lobbi://')) {
        console.log('Fixing mobile deep link redirect:', redirectParam, '->', correctRedirect);
        urlObj.searchParams.set('redirect_to', correctRedirect);
        return urlObj.toString();
      }
      
      return oauthUrl;
    } catch (err) {
      console.error('Error fixing OAuth URL:', err);
      return oauthUrl;
    }
  }

  // Google Login
  document.getElementById('googleLogin')?.addEventListener('click', async () => {
    try {
      const { data, error } = await supabase.auth.signInWithOAuth({
        provider: 'google',
        options: { 
          redirectTo: redirectTo,
          skipBrowserRedirect: true  // We'll handle redirect manually
        }
      });
      
      if (error) {
        console.error('Google login error:', error);
        return;
      }
      
      if (data?.url) {
        console.log('OAuth URL generated:', data.url);
        const fixedUrl = fixOAuthRedirect(data.url, redirectTo);
        console.log('Redirecting to:', fixedUrl);
        window.location.href = fixedUrl;
      }
    } catch (err) {
      console.error('OAuth exception:', err);
    }
  });

  // Apple Login
  document.getElementById('appleLogin')?.addEventListener('click', async () => {
    try {
      const { data, error } = await supabase.auth.signInWithOAuth({
        provider: 'apple',
        options: { 
          redirectTo: redirectTo,
          skipBrowserRedirect: true
        }
      });
      
      if (error) {
        console.error('Apple login error:', error);
        return;
      }
      
      if (data?.url) {
        const fixedUrl = fixOAuthRedirect(data.url, redirectTo);
        window.location.href = fixedUrl;
      }
    } catch (err) {
      console.error('OAuth exception:', err);
    }
  });

  // Discord Login
  document.getElementById('discordLogin')?.addEventListener('click', async () => {
    try {
      const { data, error } = await supabase.auth.signInWithOAuth({
        provider: 'discord',
        options: { 
          redirectTo: redirectTo,
          skipBrowserRedirect: true
        }
      });
      
      if (error) {
        console.error('Discord login error:', error);
        return;
      }
      
      if (data?.url) {
        const fixedUrl = fixOAuthRedirect(data.url, redirectTo);
        window.location.href = fixedUrl;
      }
    } catch (err) {
      console.error('OAuth exception:', err);
    }
  });
</script>

