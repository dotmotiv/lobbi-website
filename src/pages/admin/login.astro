---
import Layout from '../../layouts/Layout.astro';
import { getAdminSession } from '../../lib/adminAuth';

// Check if already logged in
const session = await getAdminSession(Astro);
if (session) {
  return Astro.redirect('/admin');
}

// Get error message if any
const error = Astro.url.searchParams.get('error');
const details = Astro.url.searchParams.get('details');
const errorMessages: Record<string, string> = {
  'not_admin': 'Your account does not have admin access. Make sure you are added to admin_users table.',
  'auth_failed': 'Authentication failed. Please try again.',
};
let errorMessage = error ? errorMessages[error] || 'An error occurred.' : null;
if (details) {
  errorMessage = `${errorMessage} (${details})`;
}
---

<Layout title="Admin Login - Lobbi">
  <main class="login-page">
    <div class="login-container">
      <div class="login-card">
        {errorMessage && (
          <div class="error-banner">
            {errorMessage}
          </div>
        )}
        <div class="login-header">
          <img src="/lobbi-logo-transparent.png" alt="Lobbi" class="login-logo" />
          <h1 class="login-title">ADMIN PORTAL</h1>
          <p class="login-subtitle">Sign in with your authorized account</p>
        </div>
        
        <div class="login-buttons">
          <button class="auth-btn google-btn" id="googleLogin">
            <svg class="auth-icon" viewBox="0 0 24 24">
